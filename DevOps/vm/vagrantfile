Vagrant.configure("2") do |config|


    config.vm.box = "ubuntu/bionic64"
    config.vm.synced_folder "../../", "/vargant", disabled: true


    config.vm.define "master", primary: true do |config|
    
        config.vm.hostname = "Master"
        config.vm.network "private_network", ip: "10.0.0.50"
    
    end

    config.vm.define "fristworker" do |config|
    
        config.vm.hostname = "FristWorker"
        config.vm.network "private_network", ip: "10.0.0.100"
    
    end

    config.vm.define "secondworker" do |config|
    
        config.vm.hostname = "SecondWorker"
        config.vm.network "private_network", ip: "10.0.0.150"
    
    end

    config.vm.provision "docker"

    #config.vm.define "master" do |host|

        
        #host.vm.network "private_network", ip: "10.0.0.100"

    #end

    #config.vm.define "host_2" do |host|
        
        #config.vm.network "forwarded_port", guest: 80, host: 8080
        #host.vm.network "private_network", ip: "10.0.0.200"
        #host.vm.provision "shell", path: "./sh/nginx.sh"

    #end

    

end